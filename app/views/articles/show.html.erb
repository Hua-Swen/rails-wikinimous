
<div class="card">
  <h1 class="card-header">
    <%= @article.title %>
    <%= link_to edit_article_path(@article) do %>
    <i class="fas fa-edit"></i>
    <% end %>

    <%= link_to article_path(@article), method: :delete do %>
    <i class="fas fa-trash"></i>
    <% end %>
  </h1>

  <div class="card-body">
    <p><%= @article.content %></p>

    <%= link_to "Back to articles", articles_path %>
  </div>
</div>


